.banner
	position relative
	width 20rem
	height 10rem
	overflow hidden
	a
		position absolute
		top 0
		display block
		width @width
		height @height 
		background-size 100% 100%
		background-repeat no-repeat
		opacity 0
		&:first-of-type
			left 0
			opacity 1
		&.previous
			animation previous .5s forwards
			opacity 1
		&.current
			animation current .5s forwards
			opacity 1
	.indicator
		position absolute
		bottom .6rem
		width 20rem
		text-align center
		z-index 2
		em
			margin-right .6rem
			padding .06rem .36rem
			background-color rgb(0, 128, 255)
			font-size .75rem
			color white
			&.current 
				background-color rgb(255, 128, 0)
@keyframes previous
	from
		left 0rem
	to
		left -20rem
@keyframes current
	from
		left 20rem
	to
		left 0